<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back">

    <TextView
        android:id="@+id/log_textViewTitle"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="70dp"
        android:text="LOGIN"
        android:textColor="#F8F4F4"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/log_editName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:ems="10"
        android:hint="Name: Popescu Ionel"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="#F8F6F6"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/log_editCNP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:ems="10"
        android:hint="CNP: 1234567645363"
        android:inputType="phone"
        android:textAlignment="center"
        android:textColor="#F7F6F6"
        android:textColorHighlight="#F7F6F6"
        android:textColorHint="#F7F6F6"
        android:textColorLink="#F7F6F6"
        android:textSize="18dp" />

    <Button
        android:id="@+id/log_buttonLog"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="50dp"
        android:text="Login" />
</LinearLayout>